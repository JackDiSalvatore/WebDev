<% include ../partials/header %>

<div class="container">
    <div class="row">
        
        <h1 style="text-align: center;">Add a New Campground</h1>
        
        <div style="width: 40%; margin: 30px auto;">
            <form action="/campgrounds" method="POST">
                
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="campground name">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.00" step="0.01">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description">
                </div>
                
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
                
            </form>
            
            <a href="/campgrounds">Go Back</a>
            
        </div>
    </div>
    
</div>

<% include ../partials/footer %>