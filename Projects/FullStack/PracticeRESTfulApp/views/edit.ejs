<% include partials/header %>

<div class="ui main text container">
    <div class="ui top attached segment">
        
        <div class="ui huge header">Edit | <%= motorcycle.brand %></div>
        <form class="ui form" action="/motorcycles/<%= motorcycle._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Model</label>
                <input type="text" name="motorcycle[name]" value="<%= motorcycle.name %>">
            </div>
            <div class="field">
                <label>Picture</label>
                <input type="text" name="motorcycle[image]" value="<%= motorcycle.image %>">
            </div>
            <div class="field">
                <label>Description</label>
                <textarea name="motorcycle[description]"><%= motorcycle.description %></textarea>
            </div>
            <button class="ui primary button">Update</button>
        </form>
    
    </div>
</div>


<% include partials/footer %>